<div class="modal" id="login">
  <div class="title__block modal-title">
    <p class="title">Вход</p>
  </div>
  <form action="/login" method="post" class="form ajax-contact-form">
    <input type="email"  name="email" class="form-email inp" placeholder="Почтовый ящик" required>
    <input type="password" name="password" class="form-password inp" 
      placeholder="Пароль" 
      pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
      title="Должен содержать минимум 8 символов, из них хотя бы одной цифры и одной прописной буквы латинского алфавита"
      required>
    <a href="#!" class="password-control"></a>
    <label class="login-message"></label>
    <div class="btn__area submit">
      <button class="btn"><span>Войти</span></button>
    </div>
  </form>
  <div class="form-close">
    <img src="/img/close.svg" alt="Закрыть">
  </div>
</div>
